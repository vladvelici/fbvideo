		<script>
			function convertCanvasToImage(canvas) {
				var image = new Image();
				image.src = canvas.toDataURL("image/png");
				return image;
			}
			
			function deleteloader(videowrapper) {
				$(".loader",videowrapper).remove(); 
			}
			
			function endcall() {
				alert("ending");
				window.location.href = "http://facebook.com";
			}
			
			$(document).ready(function() {
				$("#snapshotbut").click(function() {
					window.location.href =  convertCanvasToImage(document.getElementById("sender")).src.replace('image/png', 'image/octet-stream');
				});
				
				$("#endbut").click(function() {
					endcall();
				});
				
				$("#gamebut").click(function() {
					//deleteloader($(".senderwrap"));
				});
				
				deleteloader($(".senderwrap"));
				
				initpong();
			});
		</script>
